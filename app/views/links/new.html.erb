<head>
<link rel="stylesheet" href="/assets/link_new.css"/>
<script>
    $(document).ready(function() {
    $( ".target_serect2" ).select2({width: 'resolve'});
    });
</script>
</head>
<body>
<div class="link_new">
    新しいリンクの作成
</div>
<div class="contents">
<%= form_for @link,html: {class: "link_create"} do |f| %>
    <div class="link_box">
        <%= f.label "リンク名(表示名)", class: "text" %><br>
        <%= f.text_field :name,class: "field" %>
    </div>
    <div class="link_box">
        <%= f.label :URL, class: "text" %><br>
        <%= f.text_field :url,class: "field" %>
    </div>
    <div class="link_box">
        <%= f.label :内容 , class: "text"%><br>
        <%= f.text_area :text,class: "field_big" %>
    </div>
    <div class="link_box">
        <%=f.label :カテゴリー, class: "text" %><br>
        <%= f.collection_select :tag_id, @tags, :id, :tag_name,class: "select form-control" %>
    </div>
    <div class="link_box">
        <%=f.label :対象者, class: "text" %><br>
        <%= f.select :target_id, Target.all.map{|t| [t.target]}, { include_hidden: false }, { class: 'btn btn-default btn-lg dropdown-toggle target_serect2', multiple: true }%>
    </div> 
<%=f.submit "追加する"%>
<%end%>
<%= link_to "新しいタグを追加する",new_tag_path %>
</div>
</body>