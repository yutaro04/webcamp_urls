<head>
<link rel="stylesheet" href="/assets/link_new.css"/>
</head>
<body>
<div class="link_new">
    新しいリンクの作成
</div>
<div class="contents">
<%= form_for @link,html: {class: "link_create"} do |f| %>
    <div class="link_box">
        <%= f.label "リンク名(表示名)", class: "text" %><br>
        <%= f.text_field :name,class: "field" %>
    </div>
    <div class="link_box">
        <%= f.label :URL, class: "text" %><br>
        <%= f.text_field :url,class: "field" %>
    </div>
    <div class="link_box">
        <%= f.label :内容 , class: "text"%><br>
        <%= f.text_field :text,class: "field" %>
    </div>
    <div class="link_box">
        <%=f.label :tag, class: "text" %><br>
        <%= f.collection_select :tag_id, @tags, :id, :tag_name %>
    </div>
<%=f.submit "追加する"%>
<%end%>
<%= link_to "新しいタグを追加する",new_tag_path %>
</div>
</body>