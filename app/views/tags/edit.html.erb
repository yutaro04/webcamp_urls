<head>
<link rel="stylesheet" href="/assets/tags_new.css"/>
</head>
<body>

<div class="link_new">
    カテゴリーの編集
</div>
<div class="contents">
<%= form_for @tag,html: {class: "link_create"} do |f| %>
    <%= f.label :カテゴリー名, class: "text" %><BR>
    <%= f.text_field :tag_name,class: "field" %><BR>
    <%= f.submit "カテゴリーを編集する",class: "button"%>
<% end %>
<div class="back-box">
    <%=link_to "もどる",tags_path ,class: "back"%>
</div>
</div>
</body>
